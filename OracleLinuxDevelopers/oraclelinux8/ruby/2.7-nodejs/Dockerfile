FROM oraclelinux:8

COPY ruby.module  /etc/dnf/modules.d/ruby.module
COPY nodejs.module /etc/dnf/modules.d/nodejs.module

RUN dnf install -y ruby \
                     ruby-libs \
                     ruby-devel \
                     ruby-irb \
                     rubygems \
                     rubygem-rake \
                     rubygem-bundler \
                     sqlite-devel \
                     gcc gcc-c++ make \
                     redhat-rpm-config \
                     nodejs npm \
    && dnf clean all
